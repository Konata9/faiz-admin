{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "jsx": "react",
    "types": [
      "react"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "pretty": true
  },
  "include": [
    "frontend",
    "server"
  ],
  "exclude": [
    "node_modules"
  ]
}